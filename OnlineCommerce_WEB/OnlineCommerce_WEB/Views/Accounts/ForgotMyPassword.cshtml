
@{
    ViewBag.Title = "ForgotMyPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="register-content">
    <h2>Forgot Password Page</h2>
    <hr>
    @using (Html.BeginForm("ForgotMyPassword", "Accounts", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "register-form", role = "form" }))
    {
        @Html.AntiForgeryToken()



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-input">
            <label>E-Mail</label>
            <div>
                <input type="text" name="Username" class="form-control" />
            </div>
        </div>

        
        <div class="form-one-button">
            <div>
                <input type="submit" value="Send Me Code" class="btn btn-default" />
            </div>
        </div>

    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

